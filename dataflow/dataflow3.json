{
	"name": "dataflow3",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "ls_az_blob_azuredirectorysa",
						"type": "LinkedServiceReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "window1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Date as date,",
				"          Category as string,",
				"          Amount as short",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     container: 'sourceca',",
				"     folderPath: 'inc',",
				"     fileName: 'large.csv',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> source1",
				"source1 derive(month = month(Date)) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          Category,",
				"          Amount,",
				"          month",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 aggregate(groupBy(Category,",
				"          month),",
				"     runningtotl = sum(Amount)) ~> aggregate1",
				"aggregate1 window(over(Category),",
				"     asc(Category, true),",
				"     asc(month, true),",
				"     moving = sum(runningtotl)) ~> window1"
			]
		}
	}
}