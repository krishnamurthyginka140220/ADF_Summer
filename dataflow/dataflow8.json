{
	"name": "dataflow8",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "ls_azure_azuredirectorysa",
						"type": "LinkedServiceReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "pivot1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Date as date,",
				"          Product as string,",
				"          Region as string,",
				"          SalesAmount as short,",
				"          Quantity as short",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     container: 'sourceca',",
				"     folderPath: 'lookup',",
				"     fileName: 'sample_sales_data.csv',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> source1",
				"source1 pivot(groupBy(Product),",
				"     pivotBy(Region),",
				"     {Total Sales} = sum(SalesAmount)*sum(Quantity),",
				"     columnNaming: '$N$V',",
				"     lateral: false) ~> pivot1"
			]
		}
	}
}